#include "scaler.h"
#include "vdma.h"
#include "xil_printf.h"
#include "sleep.h"
#include "instructionRegister.h"
#include "api.h"
#include "xparameters.h"

int main()
{
	configureScaler();
    configureVdma();



	setColorByPaletteId(0, 0xF);
	usleep(100);
	setColorByPaletteId(1, 0xFF);
	usleep(100);
	setColorByPaletteId(2, 0xFFF);
	usleep(100);
	setColorByPaletteId(3, 0xFFFF);
	usleep(100);
	setColorByPaletteId(4, 0xFFFFF);
	usleep(100);
	setColorByPaletteId(5, 0xFFFFFF);
	usleep(100);
	setColorByPaletteId(6, 0xFFFFF0);
	usleep(100);
	setColorByPaletteId(7, 0xFFFF00);
	usleep(100);
	setColorByPaletteId(8, 0xFFF000);
	usleep(100);
	setColorByPaletteId(9, 0xFF0000);
	usleep(100);
	setColorByPaletteId(10, 0xF00000);
	usleep(100);
	setColorByPaletteId(11, 0x0);
	usleep(100);
	setColorByPaletteId(12, 0xF);
	usleep(100);
	setColorByPaletteId(13, 0xFF);
	usleep(100);
	setColorByPaletteId(14, 0xFFF);
	usleep(100);
	setColorByPaletteId(15, 0xFFFF);
	usleep(100);


    for(int i = 0 ; i < 2; i++)
    {
    	for(int x = 0 ; x < 16; x++)
    	{
    		for(int y = 0 ; y < 16; y++)
    		{
    			setPaletteIdForTileId(i, x, x, y);
    			setPaletteIdForTileId(i+2, y, x, y);
    			usleep(10000);
    		}
    	}

    }

    for(int x = 0 ; x < 8; x++)
    {
    	for(int y = 0; y < 8; y++)
    	{
    		setTileCoordBackground(x % 4, x, y);
    		usleep(1000);
    	}
    }

    while(1)
    {
        for(int x = 0 ; x < 8; x++)
        {
        	for(int y = 0; y < 8; y++)
        	{
        		setTileCoordBackground(x % 4, x, y);
        		usleep(100000);
        	}
        }
    }

    return 0;
}
