#include "Actor.h"
#include <stdio.h>

// Constructor
void Actor_init(Actor *a) {
  // Initialize all data elements to 0
  for (int i = 0; i < 8; i++) {
	  for (int j = 0; j < 2; j++) {
	      a->actorData[i][j] = 0;
	    }
  }
}

// Setter function to set a specific data element
void Actor_setTile(Tile *t, int x, int y, short value) {
  if (x >= 0 && x < 16 && y >= 0 && y < 16) {
    t->pixel[y][x] = value;
  }
}

// Getter function to get a specific data element
short Actor_getTile(Tile *t, int x, int y) {
	if (x >= 0 && x < 16 && y >= 0 && y < 16) {
		return t->pixel[x][y];
	} else {
		return 0;
	}
}
