#include "scaler.h"
#include "vdma.h"
#include "xil_printf.h"
#include "sleep.h"
#include "instructionRegister.h"
#include "api.h"

int main()
{
	configureScaler();
    configureVdma();


    while(1)
    {

	INSTRUCTIONREGISTER_mWriteReg(BaseAddress, RegOffset, Data) \
  	Xil_Out32((BaseAddress) + (RegOffset), (u32)(Data))
    }

    return 0;
}
