#include "scaler.h"
#include "vdma.h"
#include "xil_printf.h"
#include "sleep.h"
#include "instructionRegister.h"
#include "api.h"
#include "xparameters.h"

int main()
{
	configureScaler();
    configureVdma();



	setColorByPaletteId(0, 0x0);
	usleep(100);
	setColorByPaletteId(1, 0x0);
	usleep(100);
	setColorByPaletteId(2, 0x0);
	usleep(100);
	setColorByPaletteId(3, 0x0);
	usleep(100);
	setColorByPaletteId(4, 0x0);
	usleep(100);
	setColorByPaletteId(5, 0x0);
	usleep(100);
	setColorByPaletteId(6, 0x0);
	usleep(100);
	setColorByPaletteId(7, 0x0);
	usleep(100);
	setColorByPaletteId(8, 0xFFFFFF);
	usleep(100);
	setColorByPaletteId(9, 0xFFFFFF);
	usleep(100);
	setColorByPaletteId(10, 0xFFFFFF);
	usleep(100);
	setColorByPaletteId(11, 0xFFFFFF);
	usleep(100);
	setColorByPaletteId(12, 0xFFFFFF);
	usleep(100);
	setColorByPaletteId(13, 0xFFFFFF);
	usleep(100);
	setColorByPaletteId(14, 0xFFFFFF);
	usleep(100);
	setColorByPaletteId(15, 0xFFFFFF);
	usleep(100);


    for(int i = 0 ; i < 2; i++)
    {
    	for(int x = 0 ; x < 16; x++)
    	{
    		for(int y = 0 ; y < 16; y++)
    		{
    			setPaletteIdForTileId2(i, x, x, y);
    			setPaletteIdForTileId2(i+2, y, x, y);
    			usleep(100);
    		}
    	}

    }

    for(int x = 0 ; x < 8; x++)
    {
    	for(int y = 0; y < 8; y++)
    	{
    		setTileCoordBackground(x % 4, x, y);
    		usleep(1000);
    	}
    }

    while(1)
    {
        for(int x = 0 ; x < 8; x++)
        {
        	for(int y = 0; y < 8; y++)
        	{
        		if(x > 4)
        		{
            		setTileCoordBackground(0, x, y);
        		}
        		else
        		{
        			setTileCoordBackground(2, x, y);
        		}

        		usleep(100000);
        	}
        }
    }

    return 0;
}
